<div class="container"> 
  <div class = "row">
    <h5><span class="bg-light text-dark">生活用品一覧</span></h5>
    <div style="margin-left: auto;">
      <%=link_to new_livingware_path,class:"d-flex justify-content-end" do %>
        <i class="fas fa-plus-circle"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead class="table-light">
        <tr>
          <th></th>
          <th>変更</th>
          <th>カテゴリー</th>
          <th>生活用品</th>
          <th>保管数</th>
          <th>基準数</th>
          <th>備考</th>
        </tr>
      </thead>
  
      <tbody class="table-borderless">
        <%= form_with url:log_livingwares_path,method: :post do |fb| %>
          <% @livingwares.each do |livingware| %>
            <%= fb.fields_for "livingware[]", livingware do |f| %>
              <tr>
                <td>
                  <% if livingware.to_buy_judge.negative? %>
                    <p class="text-danger font-weight-bold">購入必要</p>
                  <% end %>
                </td>
                <td><%=f.check_box :id, { checked: false, include_hidden: false },livingware.id %></td>
                <td>
                  <%=livingware.category.name %>
                </td>
                <td>
                  <%=link_to livingware_path(livingware.id),class:"text-dark" do %>
                  <%=livingware.name %>
                  <% end %>
                </td>
                <td>
                  <%= f.select :amount, *[0..100] %>
                </td>
                <td>
                  <%=livingware.amount_standard.to_s(:delimited) %>
                </td>
                <td>
                  <%=livingware.note %>
                </td>
              </tr>
            <% end %>
          <% end %>
      </tbody>
    </table>
    <%= fb.submit '確認画面に進む' ,class:"btn btn-primary" %>
    <% end %>
  </div> 
</div>