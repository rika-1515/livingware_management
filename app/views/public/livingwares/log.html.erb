<div class="container">
  <div class = "row">
    <%= image_tag 'illustrain02-cat19.png', :size => '110x110' %>
    <h3><span class="font-weight-bold center">生活用品変更一覧</span></h3>
    <%= image_tag 'illustrain02-cat25.png', :size => '110x110' %>
    <%= image_tag 'illustrain02-cat29.png', :size => '110x110' %>
  </div>
  <div class="row">
    <table class="table table-striped">
    <%= form_with url:update_all_livingwares_path, method: :patch do |fb| %>
      <thead class="orange">
        <tr>
          <th>カテゴリー</th>
          <th>生活用品</th>
          <th>保管数</th>
          <th>基準数</th>
          <th>備考</th>
        </tr>
      </thead>

      <tbody class="table-borderless">
        <% @livingwares.each do |livingware| %>
          <%= fb.fields_for "livingware[]", livingware do |f| %>
            <tr>
              <%= f.hidden_field :id,value:livingware.id %>
              <td>
                <%=livingware.category.name %>
              </td>
              <td>
                <%=livingware.name %>
              </td>
              <td>
                <%= f.hidden_field :amount, value: livingware.amount %>
                <%=livingware.amount.to_s(:delimited) %>
              </td>
              <td>
                <%= f.hidden_field :amount_standard, value: livingware.amount_standard %>
                <%=livingware.amount_standard.to_s(:delimited) %>
              </td>
              <td>
                <%=livingware.note %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <div align="center">
    <%= fb.submit '変更を確定する' ,class:"btn btn-stitch-orange" %>
    </div>
    <% end %>
  </div>
</div>
