<div class="container">
  <h5><span class="bg-light text-dark">生活用品詳細</span></h5>
  
  <div class="row">
    <div class = "col-4">
      <%= image_tag @livingware.get_livingware_image(200,300) %>
    </div>
    <div class = "col-8">
        <table>
            <tr>
                <td>カテゴリー</td>
                <td>
                    <%=@livingware.category.name %>
                </td>
            </tr>
            
            <tr>
            　  <td>生活用品</td>
                <td>
                    <%=@livingware.name %>
                </td>
            </tr>
              <tr>
                  <td>保管数</td>
                  <td>
                    <%=@livingware.amount.to_s(:delimited) %>
                  </td>
              </tr>
              
                <tr>
                  <td>基準数</td>
                  <td>
                    <%=@livingware.amount_standard.to_s(:delimited) %>
                  </td>
                </tr>
                  
                <tr>
                  <td>備考</td>
                  <td>
                    <%=@livingware.note %>
                  </td>
                </tr>
        </table>
          
        <div>
            <%=link_to "編集する", edit_livingware_path(@livingware.id),class:"btn btn-success" %>
            <%=link_to "削除する", livingware_path(@livingware.id),method: :delete, data: {confirm: "本当に削除しますか？"},class:"btn btn-danger" %>
        </div>
    </div>
  </div>
</div>