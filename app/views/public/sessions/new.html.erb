<div class = "container">
  <div class = "row">
    <%= image_tag 'illustrain02-bird12.png', :size => '110x110' %>
    <h3><span class="font-weight-bold center">ログイン</span></h3>
    <%= image_tag 'illustrain02-tropical03.png', :size => '110x110' %>
    <%= image_tag 'illustrain02-bird10.png', :size => '110x110' %>
  </div>
  <div class = "row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table>
        <tr>
          <div class="field">
            <td>
              <%= f.label :メールアドレス %>
            </td>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>
              <%= f.label :パスワード %>
            </td>
            <td>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </td>
          </div>
        </tr>
      </table>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "ログイン",class:"btn btn btn-stitch-pink1" %>
        </div>
      <% end %>
  </div>
  <div class = "row">
    <h5><span class="font-weight-bold center">会員登録がお済みでない方
      <%=link_to "こちら",new_customer_registration_path,class:"btn btn-stitch-light-blue" %> から新規登録を行ってください
    </span></h5>
  </div>
</div>
