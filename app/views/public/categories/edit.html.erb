<div class="container">
    <h5><span class="bg-light text-dark">カテゴリー編集</span></h5>
        <% if @category.errors.any? %>
            <div class="alert alert-danger">
                <%= @category.errors.count %>件のエラーが発生しました
                <ul>
                    <% @category.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    
    <%= form_with model: @category,url: category_path,local:true do |f| %>
    
    <table>
        <tr>
            <div class="field">
                <td>
                    <%= f.label :カテゴリー %>
                </td>
                <td>
                    <%= f.text_field :name, placeholder:"キッチン" %>
                </td>
            </div>
        </tr>
    </table>
    
    <div align="right">
      <%= f.submit '変更内容を保存',class:"btn btn-success" %>
    </div>
    <% end %>
</div>