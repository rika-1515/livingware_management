<div class="container">
  <div class = "row">
    <%= image_tag 'illustrain02-hatyuruiryoseirui06.png', :size => '110x110' %>
    <h3><span class = "font-weight-bold center">会員情報編集</span></h3>
    <%= image_tag 'illustrain02-penguin03.png', :size => '110x110' %>
    <%= image_tag 'illustrain02-penguin01.png', :size => '110x110' %>
  </div>
  <div class = "row">
    <% if @customer.errors.any? %>
      <div class="alert alert-danger">
        <%= @customer.errors.count %>件未入力箇所があります。入力してください。
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class = "row">
    <%= form_with model: @customer,url:customers_path do |f| %>
      <table>
        <tr>
          <div class="field">
            <td>
              <%= f.label :ニックネーム %>
            </td>
            <td>
              <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder:"太郎", style: "width:90%" %>
            </td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>
              <%= f.label :メールアドレス %>
            </td>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width:90%" %>
            </td>
          </div>
        </tr>
        <tr>
          <td>
            <%= f.submit "編集内容を保存",class:"btn btn-stitch-light-blue" %>
          </td>
          <td>
            <%= link_to "退会する",customers_quit_path,class:"btn btn-stitch-red2" %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>