<div class="container">
    <h5><span class="bg-light text-dark">会員情報編集</span></h5>

    <%= form_with model: @customer,url:customers_path do |f| %>
    <table>
        <tr>
            <div class="field">
                <td>
                <%= f.label :ニックネーム %>
                </td>
                <td>
                <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder:"太郎" %>
                </td>
            </div>
        </tr>
        <tr>
            <div class="field">
                <td>
                    <%= f.label :メールアドレス %>
                </td>
                <td>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </td>
            </div>
        </tr>
    </table>

    <div class="actions" align="center">
        <%= f.submit "編集内容を保存",class:"btn btn-success" %>
    </div>
    <% end %>

    <div align="right">
        <%= link_to "退会する",customers_quit_path,class:"btn btn-danger" %>
    </div>
</div>