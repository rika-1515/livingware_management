<div class="container">
  <div class = "row">
    <%= image_tag 'illustrain02-bird04.png', :size => '110x110' %>
    <h3><span class = "font-weight-bold center">カテゴリー登録/一覧</span></h3>
    <%= image_tag 'illustrain02-bird20.png', :size => '110x110' %>
    <%= image_tag 'illustrain02-bird19.png', :size => '110x110' %>
  </div>
  <div class = "row">
    <div class = "col-md-6 bottom-margin">
      <% if @category.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= form_with model: @category,url: admin_master_categories_path,local:true do |f| %>
        <table class = "table-margin1">
          <tr>
            <div class="field">
              <td>
                <%= f.label :カテゴリー %>
              </td>
              <td>
                <%= f.text_field :name, placeholder:"キッチン" %>
              </td>
            </div>
            <td>
              <%= f.submit '新規登録',class:"btn btn-stitch-purple" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
    <div class = "col-md-6">
      <table class ="table margin-none" cellpadding="20">
        <thead class = "purple" align = "center">
          <tr>
            <th colspan = "2">カテゴリー</th>
          </tr>
        </thead>
        <% @categories.each do |category| %>
        <tbody>
          <tr>
            <td align = "center">
              <%=category.name %>
            </td>
            <td align = "right">
              <%=link_to "編集する", edit_admin_master_category_path(category.id),class:"btn btn-stitch-purple" %>
              <%=link_to "削除する",admin_master_category_path(category.id),method: :delete, data: {confirm: "本当に削除しますか？"},class:"btn btn-stitch-red3" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>