<div class="container">
  <h5><span class="bg-light text-dark">お問い合わせ詳細</span></h5>
    <table>
        <tr>
            <td class="font-weight-bold">会員名</td>
            <td>
                <%=@inquiry.customer.name %>
            </td>
        </tr>
        
        <tr>
            <td class="font-weight-bold">注文日</td>  
            <td>
                <%=@inquiry.created_at.strftime('%Y/%-m/%-d') %>
        </td>
        </tr>
          
        <tr>
            <td class="font-weight-bold">タイトル</td>
            <td>
                <%=@inquiry.title %>
            </td>
        </tr>
          
        <tr>
            <td class="font-weight-bold">本文</td>
            <td>
                <%=@inquiry.body %>
            </td>
        </tr>
          
        <tr>
            <td class="font-weight-bold">対応ステータス</td>
            <td>
                <%= form_with model:@inquiry,url:admin_inquiry_path,method: :patch do |f| %>
                <%= f.select :support_status, Inquiry.support_statuses_i18n.invert %>
                <%=f.submit '更新',class:"btn btn-success" %>
                <% end %>
            </td>
        </tr>
      </table>
