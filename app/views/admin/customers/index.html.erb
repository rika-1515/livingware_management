<div class="container">  
    <div class="row">
        <h5><span class="bg-light text-dark">会員一覧</span></h5>

    <table class="table">
        <thead class="table-light">
          <tr>
            <th>会員ID</th>
            <th>会員</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
    
        <tbody>
          <% @customers.each do |customers| %>
            <tr>
              <td>
                <%=customers.id %>
              </td>
              <td>
                <%=link_to admin_customer_path(customer.id) do %>
                <%=customers.name %>
                <% end %>
              </td>
              <td>
                <%=customers.email %>
              </td>
              <td>
                <% if customers.is_active? %>
                  <p class="text-success font-weight-bold">有効</p>
                <% else %>
                  <p class="text-muted font-weight-bold">退会</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> 
</div>

<div class ="d-flex justify-content-center">
  <%= paginate @customers %>
</div>