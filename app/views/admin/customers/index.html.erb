<div class="container">
  <div class = "row">
    <%= image_tag 'illustrain02-hatyuruiryoseirui06.png', :size => '110x110' %>
    <h3><span class = "font-weight-bold center">会員一覧</span></h3>
    <%= image_tag 'illustrain02-penguin03.png', :size => '110x110' %>
    <%= image_tag 'illustrain02-penguin01.png', :size => '110x110' %>
  </div>
  <div class = "row">
    <table class="table table-striped">
      <thead class="light-blue">
        <tr>
          <th>会員ID</th>
          <th>会員</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customers| %>
          <tr>
            <td>
              <%=customers.id %>
            </td>
            <td>
              <%=link_to admin_customer_path(customers.id) do %>
              <%=customers.name %>
              <% end %>
            </td>
            <td>
              <%=customers.email %>
            </td>
            <td>
              <% if customers.is_active? %>
                <p class="text-success font-weight-bold">有効</p>
              <% else %>
                <p class="text-muted font-weight-bold">退会</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class ="d-flex justify-content-center">
  <%= paginate @customers %>
</div>